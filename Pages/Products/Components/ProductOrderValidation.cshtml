@model ProductOrderValidation

<div>
  @if (Model.Message != null)
  {
    <div class="toast align-items-center show text-bg-danger init" style="max-width: unset; position: absolute; right: 0;" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          @Model.Message
        </div>
        <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  }
</div>